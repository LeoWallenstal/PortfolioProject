@model UserViewModel

<link href="/css/profile.css" rel="stylesheet">

<h1>Min Profil</h1>

<!-- PROFILBILD NÅNSTANS -->

<section>
    <div class="label-w-text">
        <p class="label">Namn: </p>
        <p class="text">@($"{Model.FullName}")</p>
    </div>

    <div class="label-w-text">
        <p class="label">Användarnamn: </p>
        <p class="text">@($"{Model.UserName}")</p>
    </div>

    <div class="label-w-text">
        <p>Email: </p>
        <p>@($"{Model.Email}")</p>
    </div>

    <div class="label-w-text">
        <p>Telefonnummer: </p>
        <p>@($"{Model.PhoneNumber}")</p>
    </div>

    <div class="label-w-text">
        <p>Adress: </p>
        <p>@($"{Model.Adress}")</p>
    </div>

    <div class="label-w-checkbox">
        <label asp-for="IsPrivate">Privat profil:</label>
        <input type="checkbox" asp-for="IsPrivate" disabled>
    </div>

    <div class="button-wrapper">
        <a asp-action="Edit" class="btn btn-primary">Redigera Profil</a>
    </div>    
</section>

<!-- CV -->

    @if (Model.CvIsEmpty())
    {
        <section>
            <p>Ditt cv är tomt just nu!</p>
            <div class="button-wrapper">
                <a asp-action="CreateCv" class="btn btn-primary">Skapa CV</a>
            </div>
        </section>
    }
    else
    {
        <section>
            <h1>@Model.Cv.Title</h1>
            <p>@Model.Cv.Summary</p>

            <div class="button-wrapper">
                <a asp-action="Edit" class="btn btn-primary">Redigera CV</a>
            </div>
        </section>
    }




