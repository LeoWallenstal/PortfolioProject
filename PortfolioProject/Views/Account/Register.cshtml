@model RegisterViewModel
@{
    ViewData["Title"] = "Registrera";
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <form method="post" asp-controller="Account" asp-action="Register">
                <h2 class="text-center m-3">Registrera dig</h2>
                <div class="form-group row mb-4 align-items-center">
                    <div class="col-12 col-md-3">
                        <label>Förnamn: </label>
                    </div>
                    <div class="col-12 col-md-6">
                        <input asp-for="FirstName" class="form-control" />
                    </div>
                    <div class="col-12 col-md-3">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-4 align-items-center">
                    <div class="col-12 col-md-3">
                        <label>Efternamn: </label>
                    </div>
                    <div class="col-12 col-md-6">
                        <input asp-for="LastName" class="form-control" />
                    </div>
                    <div class="col-12 col-md-3">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-4 align-items-center">
                    <div class="col-12 col-md-3">
                        <label>Mailadress: </label>
                    </div>
                    <div class="col-12 col-md-6">
                        <input asp-for="Email" class="form-control" />
                    </div>
                    <div class="col-12 col-md-3">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-4 align-items-center">
                    <div class="col-12 col-md-3">
                        <label>Användarnamn: </label>
                    </div>
                    <div class="col-12 col-md-6">
                        <input asp-for="UserName" class="form-control" />
                    </div>
                    <div class="col-12 col-md-3">
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>


                <div class="form-group row mb-4 align-items-center">
                    <div class="col-12 col-md-3">
                        <label>Lösenord: </label>
                    </div>
                    <div class="col-12 col-md-6">
                        <input asp-for="Password" class="form-control" />
                    </div>
                    <div class="col-12 col-md-3">
                        <span asp-validation-for="Password" class="text-danger d-block"></span>
                    </div>
                </div>

                <div class="form-group row mb-4 align-items-center">
                    <div class="col-12 col-md-3">
                        <label>Bekräfta Lösenord: </label>
                    </div>
                    <div class="col-12 col-md-6">
                        <input asp-for="ConfirmPassword" class="form-control" />
                    </div>
                    <div class="col-12 col-md-3">
                        <span asp-validation-for="ConfirmPassword" class="text-danger d-block"></span>
                    </div>
                </div>


                <div class="form-group row mb-4 justify-content-center" ">
                    <div class="col-auto">
                        <button type="submit" class="btn btn-primary">Registrera</button>
                    </div>
                </div>
            </form>
            </div>
     </div>
</div>

